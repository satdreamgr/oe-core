+  list(APPEND PLATFORM_DEFINES "-DTARGET_V3D")
+  list(APPEND DEPLIBS v3dplatform)
+elseif(WITH_PLATFORM STREQUAL "xcore-mipsel")
+  list(APPEND PLATFORM_DEFINES "-DTARGET_V3D")
+  list(APPEND DEPLIBS v3dplatform)
